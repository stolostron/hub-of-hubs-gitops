---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: hub-of-hubs-gitops
roleRef:
  kind: ClusterRole
  name: hub-of-hubs-gitops
  apiGroup: rbac.authorization.k8s.io
subjects:
- kind: ServiceAccount
  name: hub-of-hubs-gitops
  namespace: open-cluster-management
---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: hub-of-hubs-gitops
rules:
- apiGroups:
  - ""
  resources:
  - pods
  - configmaps
  - events
  verbs:
  - create
  - delete
  - get
  - list
  - patch
  - update
  - watch
- apiGroups:
  - coordination.k8s.io
  resources:
  - leases
  verbs:
  - get
  - create
  - update
  - delete
- apiGroups:
  - "apps.open-cluster-management.io"
  resources:
  - subscriptions
  verbs:
  - get
  - list
  - watch
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: hub-of-hubs-gitops
  namespace: open-cluster-management
---
apiVersion: v1
kind: Service
metadata:
  name: hub-of-hubs-gitops
  namespace: open-cluster-management
  labels:
    app: hub-of-hubs-gitops
    service: hub-of-hubs-gitops
  annotations:
    service.beta.openshift.io/serving-cert-secret-name: hub-of-hubs-gitops-certs
spec:
  ports:
  - port: 8080
    name: http
  selector:
    name: hub-of-hubs-gitops
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: hub-of-hubs-gitops-ca-bundle
  namespace: open-cluster-management
  annotations:
    service.beta.openshift.io/inject-cabundle: "true"
  labels:
    service: hub-of-hubs-gitops
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hub-of-hubs-gitops
  namespace: open-cluster-management
spec:
  replicas: 1
  selector:
    matchLabels:
      name: hub-of-hubs-gitops
  template:
    metadata:
      labels:
        name: hub-of-hubs-gitops
    spec:
      serviceAccountName: hub-of-hubs-gitops
      containers:
        - name: hub-of-hubs-gitops
          image: $IMAGE
          securityContext:
            privileged: true
          args:
            - '--zap-devel=true'
          imagePullPolicy: Always
          env:
            - name: DATABASE_URL
              valueFrom:
                secretKeyRef:
                  name: hub-of-hubs-database-transport-bridge-secret
                  key: url
            - name: POD_NAMESPACE
              valueFrom:
                fieldRef:
                 apiVersion: v1
                 fieldPath: metadata.namespace
            - name: SUBSCRIPTION_GIT_STORAGE_DIR_PATH
              value: /opt/hub-of-hubs-subscription-storage
            - name: AUTHORIZATION_URL
              value: https://hub-of-hubs-rbac.open-cluster-management.svc:8181
            - name: AUTHORIZATION_CA_BUNDLE_PATH
              value: /hub-of-hubs-rbac-ca/service-ca.crt
            - name: KEY_PATH
              value: /certs/tls.key
            - name: CERTIFICATE_PATH
              value: /certs/tls.crt
            - name: SYNC_INTERVAL
              value: 30s
          volumeMounts:
            - readOnly: true
              mountPath: /opt/hub-of-hubs-subscription-storage
              name: hoh-gitops-pv
            - readOnly: true
              mountPath: /hub-of-hubs-rbac-ca
              name: hub-of-hubs-rbac-ca
            - readOnly: true
              mountPath: /certs
              name: certs
      volumes:
        - name: hoh-gitops-pv
          persistentVolumeClaim:
            claimName: hoh-gitops-pv-claim
        - name: hub-of-hubs-rbac-ca
          configMap:
            name: hub-of-hubs-gitops-ca-bundle
        - name: certs
          secret:
            secretName: hub-of-hubs-gitops-certs
---